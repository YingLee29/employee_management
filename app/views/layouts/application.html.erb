<!DOCTYPE html>
<html>
  <head>
    <title>Employee Management</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <script>
      var currentLocale = "<%= I18n.locale.to_s %>";
    </script>
  </head>

  <body>
    <!-- flash message -->
    <div class="position-absolute z-index-999 alert-center">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-success hidden-flash">
          <%= message %>
        </div>
      <% end %>
    </div>

    <%= render "layouts/header" %>
    <%= yield %>
  </body>
</html>
<script>
  setTimeout(function () {
    $('.hidden-flash').addClass('d-none');
  }, 3000);
</script>
