<div class="container mt-2">
  <h2>Edit member</h2>
  <div class="user-new-container">
    <%= form_with(model: @user, url: member_path(@user)) do |form| %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group mb-3">
            <%= form.label :name %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group mb-3">
            <%= form.label :email %>
            <%= form.email_field :email, class: "form-control", disabled: true %>
          </div>
          <div class="form-group mb-3">
            <%= form.label :information %>
            <%= form.text_area :information, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group mb-3">
            <%= form.label :phone %>
            <%= form.text_field :phone, class: "form-control" %>
          </div>
          <div class="form-group mb-3">
            <%= form.label :position %>
            <%= form.select(:position, [['intern', 'intern'],
                  ['junior', 'junior'],
                  ['senior', 'senior'],
                  ['pm', 'pm'],
                  ['ceo', 'ceo'],
                  ['cto', 'cto'],
                  ['bo', 'bo']],
                  {},
                  { class: "form-control" }) %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= form.submit "Update", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
