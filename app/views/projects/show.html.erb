<div class="container mt-2">
  <h2>Project Detail</h2>
    <div>
      Project Name: <span style="color: blue"><%= @project.name.capitalize %></span>
    </div>
    <div>
      Project Status: <span style="color: blue"><%= @project.status.capitalize %></span>
    </div>
    <div>
    <span>Members:</span>
    <div>
      <table style="margin-bottom: 25px; margin-left: 25px;">
        <tr>
          <th style="padding-right: 100px;">Name</th>
          <th>Role</th>
        </tr>
        <% @user_project.each do |user_project| %>
          <tr>
            <td style="padding-right: 100px; color: blue" ><%= user_project.user.name %></td>
            <td><%= user_project.role %></td>
          </tr>
        <% end %>
      </table>
     </div>
    <%= link_to 'Back', projects_path, class:"btn btn-primary"%>
</div>
